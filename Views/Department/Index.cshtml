@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Departments Table</h2>
        </div>
        <div class="col-6" text-end>
            <a asp-controller="Department" asp-action="Adding" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add New Department
            </a>
        </div>
    </div>
    <br /><br />
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Department ID
            </th>
            <th>
                Department Name
            </th>
            <th>
                Department Location
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td with="50%">
                    @obj.DepartmentID
                </td>
                <td with="30%">
                    @obj.DepartmentName
                </td>
                <td with="%50">
                    @obj.DepartmentLocation
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Department" asp-action="Edit" asp-route-id="@obj.DepartmentID"
                       class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                        <a asp-controller="Department" asp-action="Delete" asp-route-id="@obj.DepartmentID"
                       class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }

    </tbody>


</table>
