@model IEnumerable<Personnel>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Personnels Table</h2>
        </div>
        <div class="col-6" text-end>
            <a asp-controller="Personnel" asp-action="Adding" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add New Person
            </a>
        </div>
    </div>
    <br /><br />
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Personnel ID
            </th>
            <th>
                Personnel Name
            </th>
            <th>
                Personnel LastName
            </th>
            <th>
                Personnel Age
            </th>
            <th>
                Personnel Department
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td with="50%">
                    @obj.PersonnelID
                </td>
                <td with="30%">
                    @obj.PersonnelName
                </td>
                <td with="%50">
                    @obj.PersonnelLastName
                </td>
                <td with="%50">
                    @obj.PersonnelAge
                </td>
                <td with="%50">
                    @obj.Department.DepartmentName
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Personnel" asp-action="Edit" asp-route-id="@obj.PersonnelID"
                         class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                        <a asp-controller="Personnel" asp-action="Delete" asp-route-id="@obj.PersonnelID"
                       class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }

    </tbody>


</table>
